generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model produk {
  id         String       @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  nama       String       @db.VarChar(255)
  harga      Int
  deskripsi  String?      @db.Text
  gambar_url String       @db.VarChar(255)
  kategori   String       @db.VarChar(100)
  stok       Int          @default(0)
  terjual    Int          @default(0)
  penjualan  penjualan[]
}

model pelanggan {
  id         String      @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  nama       String      @db.VarChar(255)
  email      String      @unique @db.VarChar(255)
  alamat     String?     @db.Text
  telepon    String?     @db.VarChar(20)
  penjualan  penjualan[]
}

model penjualan {
  id           String    @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  pelanggan_id String    @db.Uuid
  produk_id    String    @db.Uuid
  jumlah       Int
  total        Int
  status       String    @db.VarChar(50) // "Dikirim", "Proses", "Selesai"
  tanggal      DateTime  @default(now()) @db.Timestamp()
  pelanggan    pelanggan @relation(fields: [pelanggan_id], references: [id])
  produk       produk    @relation(fields: [produk_id], references: [id])
}

model pendapatan {
  bulan     String @unique @db.VarChar(7) // Format: "YYYY-MM"
  pendapatan Int
}

model rating_toko {
  id         String   @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  nilai      Float
  bulan      String   @db.VarChar(7) // Format: "YYYY-MM"
  created_at DateTime @default(now()) @db.Timestamp()
}

model user {
  id       String @id @default(dbgenerated("uuid_generate_v4()")) @db.Uuid
  nama     String @db.VarChar(255)
  email    String @unique @db.VarChar(255)
  password String
  role     String @default("admin") @db.VarChar(20)
}

